{
    "name": "it-bens/shopware-remote-admin-api-test-runnner",
    "description": "A wrapper around the Shopware core to run tests against the admin API via remote access.",
    "type": "package",
    "license": "MIT",
    "authors": [
        {
            "name": "Martin Bens",
            "email": "martin.bens@it-bens.de"
        }
    ],
    "minimum-stability": "stable",
    "prefer-stable": true,
    "require": {
        "shopware/core": "^6.5",
        "symfony/browser-kit": "^6.3",
        "symfony/dotenv": "^6.3"
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "symfony/flex": true,
            "symfony/runtime": true,
            "captainhook/plugin-composer": true
        },
        "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true
    },
    "autoload": {
        "psr-4": {
            "ITB\\ShopwareRemoteAdminApiTestRunner\\": "src/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*",
        "symfony/polyfill-php73": "*",
        "symfony/polyfill-php74": "*",
        "symfony/polyfill-php80": "*",
        "symfony/polyfill-php81": "*"
    },
    "require-dev": {
        "captainhook/captainhook": "^5.18",
        "symplify/coding-standard": "*",
        "symplify/easy-coding-standard": "*"
    }
}
